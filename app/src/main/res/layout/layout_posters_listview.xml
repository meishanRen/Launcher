<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="450dp"

    android:clipChildren="false"
    android:clipToPadding="false"
    android:focusable="false"
    android:focusableInTouchMode="false"

    android:orientation="vertical">


    <com.haishang.launcher.widget.HorizontalListView
        android:id="@+id/list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></com.haishang.launcher.widget.HorizontalListView>


    <com.open.androidtvwidget.view.MainUpView
        android:id="@+id/mainup_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:shadowImageRes="@drawable/shadow_frame"
        app:upImageRes="@drawable/shape_mainupview_rectangle" />

</LinearLayout>